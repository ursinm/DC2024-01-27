<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1709570938003-1" author="vladamba">
        <createTable tableName="tbl_author">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tbl_author"/>
            </column>
            <column name="login" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="firstname" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1709570938003-2" author="vladamba">
        <createTable tableName="tbl_marker">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tbl_marker"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1709570938003-3" author="vladamba">
        <createTable tableName="tbl_note">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tbl_note"/>
            </column>
            <column name="story_id" type="BIGINT"/>
            <column name="content" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1709570938003-4" author="vladamba">
        <createTable tableName="tbl_story">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tbl_story"/>
            </column>
            <column name="author_id" type="BIGINT"/>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(255)"/>
            <column name="created" type="DATETIME"/>
            <column name="modified" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1709570938003-5" author="vladamba">
        <createTable tableName="tbl_story_marker">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tbl_story_marker"/>
            </column>
            <column name="story_id" type="BIGINT"/>
            <column name="marker_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1709570938003-6" author="vladamba">
        <addUniqueConstraint columnNames="login" constraintName="uc_tbl_author_login" tableName="tbl_author"/>
    </changeSet>
    <changeSet id="1709570938003-7" author="vladamba">
        <addUniqueConstraint columnNames="title" constraintName="uc_tbl_story_title" tableName="tbl_story"/>
    </changeSet>
    <changeSet id="1709570938003-8" author="vladamba">
        <addForeignKeyConstraint baseColumnNames="story_id" baseTableName="tbl_note"
                                 constraintName="FK_TBL_NOTE_ON_STORY" referencedColumnNames="id"
                                 referencedTableName="tbl_story"/>
    </changeSet>
    <changeSet id="1709570938003-9" author="vladamba">
        <addForeignKeyConstraint baseColumnNames="marker_id" baseTableName="tbl_story_marker"
                                 constraintName="FK_TBL_STORY_MARKER_ON_MARKER" referencedColumnNames="id"
                                 referencedTableName="tbl_marker"/>
    </changeSet>
    <changeSet id="1709570938003-10" author="vladamba">
        <addForeignKeyConstraint baseColumnNames="story_id" baseTableName="tbl_story_marker"
                                 constraintName="FK_TBL_STORY_MARKER_ON_STORY" referencedColumnNames="id"
                                 referencedTableName="tbl_story"/>
    </changeSet>
    <changeSet id="1709570938003-11" author="vladamba">
        <addForeignKeyConstraint baseColumnNames="author_id" baseTableName="tbl_story"
                                 constraintName="FK_TBL_STORY_ON_AUTHOR" referencedColumnNames="id"
                                 referencedTableName="tbl_author"/>
    </changeSet>

</databaseChangeLog>